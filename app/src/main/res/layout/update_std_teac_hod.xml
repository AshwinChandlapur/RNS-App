<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#2D3234">


    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/updateTeacher"
        android:text="insert new teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:width="260dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cardlayout" />
    <Button
        android:layout_marginTop="60dp"
        android:id="@+id/updateStudent"
        android:text="insert new student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:width="260dp"
        android:layout_below="@+id/updateTeacher"
        android:layout_alignStart="@+id/updateTeacher"
        android:background="@drawable/cardlayout" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Admin"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#74797D" />

</RelativeLayout>