<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#2D3234">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter USN"
        android:id="@+id/textView24"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="139dp"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hod_enter_usn"
        android:layout_alignBottom="@+id/textView24"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView24"
        android:background="@drawable/edittextbg"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:hint="1RN13IS001" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get contact details"
        android:id="@+id/get_contact_details"
        android:layout_below="@+id/hod_enter_usn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/cardlayout"
        android:width="180dp" />
</RelativeLayout>