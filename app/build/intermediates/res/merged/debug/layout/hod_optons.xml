<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#2D3234"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HOD OPTIONS"
        android:id="@+id/textView23"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="view attendance"
        android:id="@+id/hod_view"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/cardlayout"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="get contact details of student"
        android:id="@+id/hod_contact"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/hod_view"
        android:layout_alignStart="@+id/hod_view"
        android:textColor="#FFFFFF"
        android:background="@drawable/cardlayout"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="view shortage attendance"
        android:id="@+id/hod_shortage"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/hod_contact"
        android:layout_alignStart="@+id/hod_view"
        android:textColor="#FFFFFF"
        android:background="@drawable/cardlayout" />


</RelativeLayout>