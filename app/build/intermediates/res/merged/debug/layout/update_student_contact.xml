<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#2D3234">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update Student Contact Details"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="E-mail"
        android:id="@+id/textView8"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:textColor="#FFFFFF"
        android:background="#2D3234" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:gravity="center_horizontal"
        android:id="@+id/email"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignEnd="@+id/textView7"
        android:background="@drawable/edittextbg"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:hint="example@domain.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact"
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView8"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/phone"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignEnd="@+id/email"
        android:background="@drawable/edittextbg"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:hint="9999999999" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:id="@+id/updateStudentContact"
        android:layout_below="@+id/phone"
        android:layout_alignEnd="@+id/phone"
        android:layout_marginTop="82dp"
        android:width="140dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/cardlayout"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/updateSubmit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>